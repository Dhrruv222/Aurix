# ─── App ──────────────────────────────────────────────────────────────────────
ENV=dev
DEBUG=True
APP_NAME=Aurix AI Service

# ─── Server ───────────────────────────────────────────────────────────────────
HOST=0.0.0.0
PORT=8001

# ─── Database ─────────────────────────────────────────────────────────────────
# Replace with your actual PostgreSQL credentials
DATABASE_URL=postgresql://postgres:password@localhost:5432/aurix_ai

# ─── CORS ─────────────────────────────────────────────────────────────────────
# In production, replace with actual frontend URL e.g. https://app.aurix.com
ALLOWED_ORIGINS=["*"]

# ─── AI Scoring ───────────────────────────────────────────────────────────────
SCORING_TIMEOUT=5.0
HIGH_RISK_AMOUNT=10000.0
MEDIUM_RISK_AMOUNT=5000.0
